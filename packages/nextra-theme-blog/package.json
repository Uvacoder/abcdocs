{
  "name": "nextra-theme-blog",
  "version": "2.0.0-beta.19",
  "description": "A Nextra theme for blogs.",
  "repository": "https://github.com/shuding/nextra",
  "author": "Shu Ding <g@shud.in>",
  "license": "MIT",
  "files": [
    "dist/*",
    "style.css"
  ],
  "sideEffects": false,
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "cusdis": [
        "./dist/cusdis.d.ts"
      ]
    }
  },
  "exports": {
    "./style.css": "./style.css",
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cusdis": {
      "import": "./dist/cusdis.js",
      "types": "./dist/cusdis.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:tailwind": "cross-env NODE_ENV=production pnpm postcss src/styles.css -o style.css --verbose",
    "build:all": "pnpm build && pnpm run build:tailwind",
    "types": "tsup --dts-only",
    "types:check": "tsc --noEmit",
    "dev": "concurrently \"pnpm dev:layout\" \"pnpm dev:tailwind\"",
    "dev:layout": "tsup --watch",
    "dev:tailwind": "cross-env TAILWIND_MODE=watch pnpm postcss src/styles.css -o style.css --watch",
    "prepublishOnly": "pnpm build:all",
    "clean": "rimraf ./dist ./style.css",
    "test": "vitest run",
    "format": "prettier --ignore-path ../../.gitignore --write --list-different ."
  },
  "dependencies": {
    "@mdx-js/react": "^2.1.2",
    "next-themes": "^0.2.0-beta.2"
  },
  "peerDependencies": {
    "next": ">=9.5.3",
    "react": ">=16.13.1",
    "react-cusdis": "^2.1.3",
    "react-dom": ">=16.13.1"
  },
  "peerDependenciesMeta": {
    "react-cusdis": {
      "optional": true
    }
  },
  "devDependencies": {
    "@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
    "@tailwindcss/typography": "^0.5.4",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.8",
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.12",
    "cssnano-preset-advanced": "^5.3.8",
    "next": "^12.2.4",
    "nextra": "workspace:*",
    "postcss": "^8.4.14",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.1.0",
    "react": "^18.2.0",
    "react-cusdis": "^2.1.3",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.1.8",
    "tsup": "^6.2.1",
    "vitest": "^0.21.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  }
}
