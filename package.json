{
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build:tailwind build --filter=./packages/*",
    "types:check": "turbo run types:check",
    "lint": "eslint --ignore-path .gitignore .",
    "dev:core": "turbo run dev --filter=nextra...",
    "dev:theme-blog": "turbo run dev --filter=blog...",
    "dev:theme-docs": "turbo run dev --filter=swr-site...",
    "build:core": "pnpm run build --filter=nextra",
    "build:theme-blog": "pnpm run build --filter=nextra-theme-blog",
    "build:theme-docs": "pnpm run build --filter=nextra-theme-docs",
    "build:all": "turbo run build:tailwind build",
    "version": "changeset version",
    "release": "changeset publish",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "turbo run format"
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.2",
    "@edge-runtime/vm": "1.1.0-beta.23",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "rimraf": "^3.0.2",
    "turbo": "^1.4.2",
    "typescript": "^4.7.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "packageManager": "pnpm@7.3.0",
  "workspaces": [
    "packages/*"
  ],
  "pnpm": {
    "overrides": {
      "vitest": "^0.21.0",
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "@mdx-js/react": "^2.1.2",
      "next-themes": "^0.2.0-beta.2",
      "next": "^12.2.4",
      "@types/react": "^18.0.15",
      "@types/react-dom": "^18.0.6",
      "postcss": "^8.4.14",
      "postcss-cli": "^8.3.1",
      "autoprefixer": "^10.4.8",
      "cssnano": "^5.1.12",
      "tailwindcss": "^3.1.8",
      "@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
      "@tailwindcss/typography": "^0.5.4",
      "tsup": "^6.2.1",
      "concurrently": "^7.3.0",
      "cross-env": "^7.0.3",
      "postcss-import": "^14.1.0"
    }
  }
}
